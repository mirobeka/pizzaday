{% extends "application.jinja" %} {# change title #} {% block title %}Pizza Day{% endblock %}

{# content for main block #}
{% block content %}

<div class="top small spacer"></div>
<div class="ui page grid">
  <div class="ui column">
    <h2 class="ui huge center aligned icon header" >
      <i class="blue time icon"></i>
      <div class="content">
        Active Sessions
      </div>
    </h2>

    <table class="ui inverted table segment">
      <thead>
        <tr>
          <th> Dealer </th>
          <th> Restaurant </th>
          <th> Deadline </th>
          <th> Approx Lunch </th>
          <th> # of Orders </th>
          <th> Join? </th>
        </tr>
      </thead>
      <tbody>
        {% for dealer, data in sessions.items() %}
        <tr>
          <td>{{ dealer }}</td>
          <td>{{ data.get("info", "restaurant") }}</td>
          <td>{{ data.get("info", "deadline") }}</td>
          <td>{{ data.get("info", "approx_lunch") }}</td>
          <td>{{ data.options("orders")|length }} orders</td>
          <td>
            <a href="/{{dealer}}/orderpizza/"class="ui green medium button">
              yes!
            </a>
          </td>
        </tr>
          
        {% endfor %}
      </tbody>
    </table>
  </div>
</div>
{% endblock content %}
